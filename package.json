{
    "private": true,
    "name": "@loopmode/stateful-workspace",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Jovica Aleksic <jovica.aleksic@loopmode.de>",
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start": "npm-run-all --parallel examples watch",
        "examples": "cd packages/examples && yarn start",
        "build": "lerna run build --parallel --stream --no-private",
        "watch": "lerna run watch --parallel --stream --no-private",
        "lint": "lerna run lint --parallel --stream",
        "docs": "cd packages/examples && yarn build && cp -r build/* ../../docs"
    },
    "devDependencies": {
        "cross-env": "^5.2.0",
        "lerna": "^3.13.0",
        "npm-run-all": "^4.1.5"
    }
}
