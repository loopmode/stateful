{
    "private": true,
    "name": "@loopmode/stateful-workspace",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Jovica Aleksic <jovica.aleksic@loopmode.de>",
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "clean": "rm -rf ./packages/*/lib/*",
        "build": "lerna run build --no-private --stream",
        "watch": "lerna run watch --no-private --stream --parallel",
        "develop": "cd packages/examples && yarn start",
        "docs": "yarn build && cd packages/examples && yarn deploy",
        "lint": "lerna run lint --parallel --stream",
        "start": "npm-run-all --parallel watch develop"
    },
    "devDependencies": {
        "cross-env": "^5.2.0",
        "gh-pages": "^2.0.1",
        "lerna": "^3.13.0",
        "npm-run-all": "^4.1.5"
    }
}
