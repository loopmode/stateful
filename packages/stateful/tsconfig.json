{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES5",
    "module": "CommonJS",
    "jsx": "react", 
    "lib": ["dom"],
    "moduleResolution": "node",
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true
  },
  "include": ["src"]
}
