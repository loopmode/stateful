{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "extends": ["react-app", "prettier", "prettier/react"],
    "plugins": ["react", "import", "prettier"],
    "settings": {
        "import/resolver": {
            "node": {
                "moduleDirectory": ["node_modules", "src"]
            }
        },
        "import/ignore": ["node_modules"],
        "react": {
            "version": "16.8"
        }
    },
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "printWidth": 80,
                "singleQuote": true,
                "trailingComma": "none",
                "bracketSpacing": true,
                "jsxBracketSameLine": false,
                "parser": "babel",
                "semi": true
            }
        ],
        "import/no-unresolved": [
            2,
            {
                "commonjs": true,
                "amd": true
            }
        ],
        "require-await": 1,
        "no-unused-vars": [1, { "ignoreRestSiblings": true }],
        "import/named": 2,
        "import/namespace": 2,
        "import/default": 2,
        "import/export": 2,
        "import/no-named-as-default": 0,
        "react/jsx-no-duplicate-props": 2,
        "react/prop-types": 2,
        "react/jsx-uses-react": 1
    },
    "globals": {}
}
